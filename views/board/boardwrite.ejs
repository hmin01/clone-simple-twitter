<!DOCTYPE html>
<html lang="ko">
<head>
    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <meta charset="UTF-8">
    <title>글쓰기</title>
</head>
<body>
<form id="writefrom" name="writefrom" method="POST" enctype="multipart/form-data">
    <table>
        <tr>
            <td><textarea id="contents" name="contents" style="resize: none; width: 500px; height: 100px;  "></textarea></td>
        </tr>
        <td><input type="file" id="image_path" name="image_path"></td>
        <td><input type="submit" id="write" value="write" name="write"></td>
    </table>
</form>

<script type="javascript">
    $(document).ready(function () {
        $("#write").submit(function () {
            $.ajax({
                url: './write',
                type: 'POST',
                async: true,
                dataType: 'json',
                enctype: "multipart/form-data",
                data: {
                    contents : $('#contents').val(),
                    image_path : $('#image_path').val(),
                },
                success: function (data) {
                    alert("성공");
                    location.href = './';
                },
                error: function (err) {
                }
            });
        });
    });
</script>
</body>
</html>